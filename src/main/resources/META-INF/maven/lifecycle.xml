<lifecycles>
    <lifecycle>
        <id>cobertura</id>
        <phases>
            <phase>
                <id>process-classes</id>
                <executions>
                    <execution>
                        <goals>
                            <goal>instrument</goal>
                        </goals>
                    </execution>
                </executions>
            </phase>
            <phase>
                <id>test</id>
                <configuration>
                    <classesDirectory>${project.build.directory}/generated-classes/cobertura</classesDirectory>
                    <testFailureIgnore>true</testFailureIgnore>
                    <forkMode>once</forkMode>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>report</goal>
                        </goals>
                    </execution>
                </executions>
            </phase>
        </phases>
    </lifecycle>
    <lifecycle>
        <id>cobertura-consolidate</id>
        <phases>
            <phase>
                <id>process-classes</id>
                <executions>
                    <execution>
                        <goals>
                            <goal>instrument</goal>
                        </goals>
                    </execution>
                </executions>
            </phase>
            <phase>
                <id>test</id>
                <configuration>
                    <classesDirectory>${project.build.directory}/generated-classes/cobertura</classesDirectory>
                    <testFailureIgnore>true</testFailureIgnore>
                    <forkMode>once</forkMode>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>consolidate</goal>
                            <goal>report</goal>
                        </goals>
                    </execution>
                </executions>
            </phase>
        </phases>
    </lifecycle>

</lifecycles>


